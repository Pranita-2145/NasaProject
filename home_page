    <script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.9.4/leaflet.min.js"></script>
<script>
    let pledgeCount = 12847;
    let map;
    let hotspotCircles = [];

    // Sample deforestation data by year
    const deforestationData = {
        2000: { forestLoss: 0, co2: 0, species: 10000, radius: 200000 },
        2005: { forestLoss: 84, co2: 33, species: 12000, radius: 300000 },
        2010: { forestLoss: 168, co2: 66, species: 15000, radius: 400000 },
        2015: { forestLoss: 252, co2: 99, species: 17000, radius: 500000 },
        2020: { forestLoss: 336, co2: 132, species: 20000, radius: 600000 },
        2025: { forestLoss: 420, co2: 165, species: 23000, radius: 700000 },
    };

    // Hotspots base data
    const baseHotspots = [
        { coords: [-3.4653, -62.2159], name: 'Amazon Rainforest' },
        { coords: [15.8700, 74.5000], name: 'Western Ghats, India' },
        { coords: [-1.5, 117.0], name: 'Borneo, Indonesia' },
        { coords: [-19.0, 47.0], name: 'Madagascar' },
        { coords: [9.0, -80.0], name: 'Central America' }
    ];

    // Initialize map
    function initMap() {
        map = L.map('map').setView([0, 0], 2);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '¬© OpenStreetMap contributors'
        }).addTo(map);

        updateMap(2000);
    }

    // Update hotspots and stats for a given year
    function updateMap(year) {
        // Remove old circles
        hotspotCircles.forEach(c => map.removeLayer(c));
        hotspotCircles = [];

        const data = deforestationData[year] || deforestationData[2025];
        baseHotspots.forEach(spot => {
            const circle = L.circle(spot.coords, {
                color: '#ef4444',
                fillColor: '#ef4444',
                fillOpacity: 0.4,
                radius: data.radius
            }).addTo(map);
            circle.bindPopup(`<b>${spot.name}</b><br>Forest Loss: ${data.forestLoss}M ha`);
            hotspotCircles.push(circle);
        });

        // Update stats
        document.getElementById('forestLoss').textContent = data.forestLoss + 'M';
        document.getElementById('co2Impact').textContent = data.co2 + 'B';
        document.getElementById('speciesImpact').textContent = data.species + '+';
    }

    // Slider functionality
    const yearSlider = document.getElementById('yearSlider');
    const yearDisplay = document.getElementById('yearDisplay');

    yearSlider.addEventListener('input', (e) => {
        const year = e.target.value;
        yearDisplay.textContent = year;
        updateMap(year);
    });
    // Animate progress bars on scroll 
    const observer = new IntersectionObserver((entries) => { entries.forEach(entry => { if (entry.isIntersecting) { document.getElementById('tempRise').style.width = '60%'; document.getElementById('co2Emissions').style.width = '75%'; document.getElementById('speciesRisk').style.width = '85%'; } }); }); observer.observe(document.querySelector('.impact-visual'));
    // Pledge function
    function takePledge() {
        pledgeCount++;
        document.getElementById('pledgeCount').textContent = pledgeCount.toLocaleString() + ' pledges taken';
        
        const button = document.querySelector('.pledge-button');
        button.textContent = '‚úì Thank You for Your Pledge!';
        button.style.background = 'linear-gradient(135deg, #22c55e 0%, #16a34a 100%)';
        
        setTimeout(() => {
            button.textContent = 'I Pledge to Save Our Forests';
            button.style.background = 'linear-gradient(135deg, #4ade80 0%, #22d3ee 100%)';
        }, 3000);
    }

    window.addEventListener('load', initMap);
</script>

